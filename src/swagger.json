{
  "openapi":"3.0.2",
  "info": {
    "title":"Aircnc",
    "version":"1.0",
    "license": {
      "name": "MIT",
      "url": "https://raw.githubusercontent.com/DiegoVictor/aircnc-api/master/LICENSE"
    }
  },
  "servers": [
    {
      "url":"http://localhost:3333/v1"
    }
  ],
  "paths": {
    "/sessions": {
      "post": {
        "tags": ["Sessions"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "example": {
                "email": "johndoe@example.com"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authenticates user, return a Bearer Token and user's email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "title": "User",
                      "allOf": [
                        {
                          "title": "User",
                          "properties": {
                            "_id": {
                              "type": "string"
                            }
                          }
                        },
                        {
                          "$ref": "#/components/schemas/User"
                        }
                      ]
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "user": {
                    "_id": "6137edecf1247f5bd4c2b396",
                    "email": "johndoe@gmail.com"
                  },
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYxMzdlZGVjZjEyNDdmNWJkNGMyYjM5NiIsImlhdCI6MTYzMTA1NTM0MCwiZXhwIjoxNjMxNjYwMTQwfQ.JqqKpS2LBEq79AV3inDtJ3q3j7ir7wzi_m5O15WZGHY"
                }
              }
            }
          }
        }
      }
    },
    "/spots": {
      "get": {
        "tags": ["Spots"],
        "security": [
          {
            "bearer": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "tech",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example": "Node.js"
          }
        ],
        "responses": {
          "200": {
            "description": "Lists available spots by tech",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Spot"
                      },
                      {
                        "title": "Spot",
                        "properties": {
                          "url": {
                            "type": "string"
                          }
                        }
                      }
                    ]
                  }
                },
                "example": [
                  {
                    "_id": "6137f5caabb1fd6124a75fe9",
                    "techs": [
                      "Node.js",
                      "ReactJS",
                      "ReactNative"
                    ],
                    "user": "6137edecf1247f5bd4c2b396",
                    "company": "Blockcode",
                    "price": 89,
                    "thumbnail": "example-1631057354938.jpg",
                    "thumbnail_url": "http://localhost:3333/files/example-1631057354938.jpg",
                    "url": "http://localhost:3333/v1/spots/6137eff508f80d2f6488af54"
                  }
                ]
              }
            },
            "headers": {
              "X-Total-Count": {
                "$ref": "#/components/headers/X-Total-Count"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Spots"],
        "security": [
          {
            "bearer": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "company",
                  "price",
                  "techs",
                  "thumbnail"
                ],
                "properties": {
                  "company": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  },
                  "techs": {
                    "type": "string"
                  },
                  "thumbnail": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create a new spot",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Spot"
                },
                "example": {
                  "_id": "6137f5caabb1fd6124a75fe9",
                  "techs": [
                    "Node.js",
                    "ReactJS",
                    "ReactNative"
                  ],
                  "user": "6137edecf1247f5bd4c2b396",
                  "company": "Blockcode",
                  "price": 90,
                  "thumbnail": "example-1631057354938.jpg",
                  "thumbnail_url": "http://127.0.0.1:3333/files/example-1631057354938.jpg"
                }
              }
            }
          },
          "404": {
            "description": "User does not exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "statusCode": 404,
                  "error": "Not Found",
                  "message": "User does not exists",
                  "code": 144,
                  "docs": "https://github.com/DiegoVictor/aircnc-api#errors-reference"
                }
              }
            }
          }
        }
      }
    },
  },
  "components": {
    "schemas": {
      "User": {
        "required": [
          "email"
        ],
        "properties": {
          "email": {
            "type": "string"
          }
        }
      },
      "Spot": {
        "properties": {
          "_id": {
            "type": "string"
          },
          "techs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "user": {
            "type": "string"
          },
          "company": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "thumbnail": {
            "type": "string"
          },
          "thumbnail_url": {
            "type": "string"
          }
        }
      },
      "Error": {
        "properties": {
          "statusCode": {
            "type": "integer"
          },
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "code": {
            "type": "integer"
          },
          "docs": {
            "type": "string"
          }
        }
      }
    },
    "parameters": {
      "id": {
        "in": "path",
        "name": "id",
        "required": true,
        "schema": {
          "type": "string"
        },
        "example": "613804ba610cf66ad8e75cd0"
      }
    },
    "headers": {
      "X-Total-Count": {
        "description": "Total number of registries in the database",
        "schema": {
          "type": "integer"
        }
      }
    },
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "type": "http"
      }
    }
  }
}
